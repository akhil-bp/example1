{
    "title": "new user",
    "description": "describes properties required to create a user",
    "type": "object",
    "properties": {
      "tname": {
        "type": "string",
        "description": "firstname of the account user",
        "pattern": "^[a-zA-Z ]*$"
      },
      "temail": {
        "type": "string",
        "description": "email of the account user",
        "format": "email"
      },
      "tpassword": {
        "type": "string",
        "description": "password of account"
      },
      "tconfpassword": {
        "type": "string",
        "description": "password of account"
      }
    },
    "required": ["tname", "temail","tpassword","tconfpassword"]
  }